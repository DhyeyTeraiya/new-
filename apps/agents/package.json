{
  "name": "@browser-ai-agent/agents",
  "version": "2.0.0",
  "description": "Multi-Agent System - Superior to Manus AI 3-Agent Architecture",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc && npm run build:copy-assets",
    "build:copy-assets": "cp -r src/assets dist/ 2>/dev/null || true",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.0.1",
    "@fastify/websocket": "^8.3.1",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "mongoose": "^8.0.3",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "bull": "^4.12.2",
    "openai": "^4.20.1",
    "anthropic": "^0.9.1",
    "@nvidia/nim": "^1.0.0",
    "playwright": "^1.40.1",
    "sharp": "^0.33.0",
    "pdf-parse": "^1.1.1",
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.6.2",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/uuid": "^9.0.7",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.0",
    "rimraf": "^5.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**",
      "!src/**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}